<html>
    <%- include('./partials/head.ejs') %> 
    <body>
        <%-include('./partials/nav.ejs') %> 
        <div class="login content">
            <form action="/register" method="POST">
                <label for="username">Username</label>
                <input type="text" id="runame" name="runame" required/>
                <div class="usernameerr"></div>
                <label for="password">Password</label>
                <input type="password" id="rpass" name="rpass" required/>
                <div class="passworderr"></div>
                <label for="confirm password">Confirm Password</label>
                <input type="password" id="confrpass" name="confrpass" required/>
                <div class="passworderr"></div>
                <button>Submit!</button>
            </form>
        </div>
    </body>
    <script>
        const form = document.querySelector('form');

        //when form is submitted
        form.addEventListener('submit',(e)=>{

            //prevent the automatic refresh of the page which usually happenes after post request happenes

            e.preventDefault();

            //get the values
        
            const username = form.runame.value;
            const password = form.rpass.value;
            if(username && password ){
            console.log(username,password);
            }

        })
    </script>
</html>